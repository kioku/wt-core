#!/usr/bin/env bash

# Pre-commit hook for wt-core
# Runs formatting, linting, and testing on staged Rust files
# Automatically stages formatting changes and continues with validation

set -e

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

echo -e "${GREEN}Running pre-commit checks...${NC}"

# Get list of staged files
STAGED_FILES=$(git diff --cached --name-only)

if [ -z "$STAGED_FILES" ]; then
    echo -e "${YELLOW}No staged files found.${NC}"
    exit 0
fi

# Check for Rust files (exclude deleted files)
RUST_FILES=$(echo "$STAGED_FILES" | grep '\.rs$' || true)
RUST_FILES_EXISTING=""
for file in $RUST_FILES; do
    if [ -f "$file" ]; then
        RUST_FILES_EXISTING="$RUST_FILES_EXISTING $file"
    fi
done
RUST_FILES="$RUST_FILES_EXISTING"

if [ ! -z "$RUST_FILES" ]; then
    echo -e "${GREEN}Checking Rust files...${NC}"

    # Run cargo fmt and auto-stage any changes
    echo "Running cargo fmt..."
    if ! cargo fmt --check 2>/dev/null; then
        echo -e "${YELLOW}Formatting issues found. Running cargo fmt to fix...${NC}"
        cargo fmt

        echo -e "${BLUE}Auto-staging formatted Rust files...${NC}"
        for file in $RUST_FILES; do
            if [ -f "$file" ]; then
                git add "$file"
                echo "  Staged: $file"
            fi
        done
        echo -e "${GREEN}Formatting complete and changes staged.${NC}"
    fi

    # Run clippy
    echo "Running cargo clippy..."
    if ! cargo clippy -- -D warnings; then
        echo -e "${RED}Clippy found issues. Please fix them before committing.${NC}"
        exit 1
    fi

    # Run tests
    echo "Running cargo test..."
    if ! cargo test; then
        echo -e "${RED}Tests failed. Please fix them before committing.${NC}"
        exit 1
    fi
fi

# ── ast-grep structural linting ──────────────────────────────────────

if [ ! -z "$RUST_FILES" ] && command -v ast-grep &> /dev/null && [ -f "sgconfig.yml" ]; then
    echo "Running ast-grep scan..."
    if ! ast-grep scan src/; then
        echo -e "${RED}ast-grep found issues. Please fix them before committing.${NC}"
        echo -e "${YELLOW}Hint: Run 'ast-grep scan src/' to see all issues with context.${NC}"
        exit 1
    fi
fi

echo
echo -e "${GREEN}✅ All pre-commit checks passed!${NC}"
echo -e "${BLUE}Summary:${NC}"
if [ ! -z "$RUST_FILES" ]; then
    echo "  • Rust: formatted, linted (clippy), tested"
    if command -v ast-grep &> /dev/null && [ -f "sgconfig.yml" ]; then
        echo "  • ast-grep: structural lint passed"
    fi
fi
echo "  • All changes have been automatically staged"
echo
exit 0
